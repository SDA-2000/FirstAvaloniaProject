<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:GetStartedApp.Views"
        xmlns:viewModels="using:GetStartedApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GetStartedApp.Views.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GetStartedApp"
        
        WindowStartupLocation="CenterScreen">
    <Window.Styles>
        <StyleInclude Source="../Styles/MainWindowStyle.axaml" />
        <StyleInclude Source="../Assets/Icons.axaml" />
    </Window.Styles>

    <Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="Auto, *, Auto" Classes="Main">
        <views:ControlPanelView Grid.Column="0" DataContext="{Binding ControlPanelViewModel}" />
        <views:DocumentPanelView Grid.Column="1" DataContext="{Binding DocumentPanelViewModel}" />
        <views:StatusBarView Grid.Column="2" DataContext="{Binding StatusBarViewModel}" />
    </Grid>
</Window>
