<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:colorPicker="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
             xmlns:viewModels="clr-namespace:GetStartedApp.ViewModels"
             x:DataType="viewModels:HighlightColorPickerViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GetStartedApp.Views.HighlightColorPickerView">
    <UserControl.Styles>
        <StyleInclude Source="../Styles/HighlightColorPickerStyle.axaml"></StyleInclude>
    </UserControl.Styles>
    
    <colorPicker:ColorPicker Color="{Binding SelectedColorForPicker, Mode=TwoWay}">
        <colorPicker:ColorPicker.Content>
            <RelativePanel>
                <PathIcon Data="{StaticResource Pencil}"
                          RelativePanel.AlignHorizontalCenterWithPanel="True"
                          x:Name="PencilIcon" />
                <Rectangle RelativePanel.Below="PencilIcon"
                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                           Fill="{Binding HighlightColor}" />
            </RelativePanel>
        </colorPicker:ColorPicker.Content>
    </colorPicker:ColorPicker>
</UserControl>