<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:colorPicker="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
             xmlns:viewModels="clr-namespace:GetStartedApp.ViewModels"
             x:DataType="viewModels:ColorPickerViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GetStartedApp.Views.ColorPickerView">
    <colorPicker:ColorPicker Color="{Binding SelectedColor, Mode=TwoWay}"
                             Content="{Binding ContentView}" />
</UserControl>
